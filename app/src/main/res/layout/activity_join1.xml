<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorMainBlack"
        android:orientation="vertical"
        tools:context=".Activity.LoginActivity">

    <LinearLayout
        android:id="@+id/ll_join_first_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="87dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:text="Artoo"
                android:textColor="#ffffff"
                android:textSize="18sp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="22dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Join us"
                android:textSize="47sp"
                android:textColor="#ffffff"
                android:textStyle="bold"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="49dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text=" E-mail"
                android:textSize="16sp"
                android:textColor="#c6c6c6"/>
            <EditText
                android:id="@+id/et_join_email"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textAlignment="viewEnd"
                android:textSize="16sp"
                android:textColor="#c6c6c6"
                android:backgroundTint="#c6c6c6"
                android:imeOptions="actionDone"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="49dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text=" Password"
                android:textSize="16sp"
                android:textColor="#c6c6c6"/>
            <EditText
                android:id="@+id/et_join_password"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textAlignment="viewEnd"
                android:textSize="16sp"
                android:textColor="#c6c6c6"
                android:backgroundTint="#c6c6c6"
                android:imeOptions="actionDone"
                android:inputType="textPassword"/>
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_below="@+id/ll_join_first_top">

        <ImageButton
            android:id="@+id/btn_join_next1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="35dp"
            android:layout_marginTop="96dp"
            android:layout_alignParentTop="true"
            android:background="@android:color/transparent"
            android:clickable="true"
            app:srcCompat="@drawable/join_next" />
    </RelativeLayout>
</LinearLayout>