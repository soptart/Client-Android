<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_fragment_hashtag_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="horizontal"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <ImageView
                android:layout_width="47dp"
                android:layout_height="22dp" app:srcCompat="@mipmap/ic_launcher"
                android:id="@+id/img_home_theme_recommend_background"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="거실에 걸어두면 느낌 있는 그림들"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txt_home_theme_recommend_title"/>
            <TextView
                    android:text="ALL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txt_home_theme_recommend_all"
                    android:layout_weight="1"
                    android:textAlignment="textEnd"/>
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/rv_home_theme_recommend_product"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/rv_home_theme_theme"/>

</LinearLayout>