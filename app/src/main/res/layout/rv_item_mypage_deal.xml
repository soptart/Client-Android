<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="53.3dp"
        android:layout_marginBottom="18.7dp"
        android:orientation="horizontal">

    <ImageView
            android:id="@+id/img_rv_item_mypage_deal_product"
            android:layout_width="50dp"
            android:layout_height="53.3dp"
            android:background="@color/colorPrimary"
            android:layout_marginRight="7.3dp"/>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <TextView
                android:id="@+id/txt_rv_item_mypage_deal_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="10sp" />
        <TextView
                android:id="@+id/txt_rv_item_mypage_deal_buyer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="9.3sp"
                android:layout_marginBottom="0.7dp"/>
        <TextView
                android:id="@+id/txt_rv_item_mypage_deal_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="9.3sp"
                android:layout_marginBottom="0.7dp"/>
        <TextView
                android:id="@+id/txt_rv_item_mypage_deal_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="8.7sp"
                android:textColor="#b0b3ba"/>
    </LinearLayout>
    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">
        <ImageView
                android:id="@+id/img_rv_item_mypage_deal_status"
                android:layout_width="42.7dp"
                android:layout_height="42.7dp"
                android:background="@color/colorPrimary"
                android:layout_alignParentRight="true" />
    </RelativeLayout>
</LinearLayout>