<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainBlack"
    android:orientation="vertical"
    tools:context=".Activity.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="87dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Artoo"
            android:textSize="18sp"
            android:textColor="#ffffff"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="22dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Join us"
            android:textSize="47sp"
            android:textColor="#ffffff"
            android:textStyle="bold"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="49dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text=" University"
            android:textSize="16sp"
            android:textColor="#c6c6c6"/>
        <EditText
            android:id="@+id/et_join_university"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="대학교"
            android:textAlignment="viewEnd"
            android:textSize="16sp"
            android:textColor="#c6c6c6"
            android:backgroundTint="#c6c6c6"
            android:imeOptions="actionDone"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="18dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text=" Major"
            android:textSize="16sp"
            android:textColor="#c6c6c6"/>
        <EditText
            android:id="@+id/et_join_major"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="학과"
            android:textAlignment="viewEnd"
            android:textSize="16sp"
            android:textColor="#c6c6c6"
            android:backgroundTint="#c6c6c6"
            android:imeOptions="actionDone"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="17dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="* 미술대학 재학생,졸업생만 적어주세요"
            android:textColor="@color/colorEssential"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageButton
            android:id="@+id/btn_join_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="35dp"
            android:layout_marginTop="86dp"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"
            android:clickable="true"
            app:srcCompat="@drawable/join_sucess"
            android:layout_alignParentTop="true"/>
    </RelativeLayout>
</LinearLayout>