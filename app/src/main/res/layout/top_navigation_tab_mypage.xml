<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="56dp"
              android:orientation="horizontal">
    <RelativeLayout
            android:id="@+id/btn_top_navi_mypage_product_tab"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="작품"
                android:textSize="16dp"
                android:textStyle="bold"/>
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/btn_top_navi_mypage_like_tab"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="저장"
                android:textSize="16dp"
                android:textStyle="bold"/>
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/btn_top_navi_mypage_deal_tab"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="거래"
                android:textSize="16dp"
                android:textStyle="bold"/>
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/btn_top_navi_mypage_review_tab"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="후기"
                android:textSize="16dp"
                android:textStyle="bold"/>
    </RelativeLayout>
</LinearLayout>