<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Fragment.HomeTodayFragment">

    <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14.7dp"
                android:textSize = "15dp"
                android:textStyle="bold"
                android:text="오늘의 작가들"/>
        <LinearLayout
                android:layout_marginTop="8.7dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <ImageView
                        android:layout_gravity="center"
                        android:id="@+id/img_fragment_today_artist0"
                        android:layout_width="50dp"
                        android:layout_height="50

                        dp"
                        tools:src="@tools:sample/avatars[0]"/>
                <TextView
                        android:id="@+id/txt_fragment_today_artist0"
                        android:text="TextView"
                        android:textSize = "12dp"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <ImageView
                        android:id="@+id/img_fragment_today_artist1"
                        android:layout_gravity="center"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        tools:src="@tools:sample/avatars[0]"/>
                <TextView
                        android:id="@+id/txt_fragment_today_artist1"
                        android:text="TextView"
                        android:textSize = "12dp"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <ImageView
                        android:id="@+id/img_fragment_today_artist2"
                        android:layout_gravity="center"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:textSize = "8.7sp"
                        android:textAlignment="center"
                        tools:src="@tools:sample/avatars[0]"/>
                <TextView
                        android:id="@+id/txt_fragment_today_artist2"
                        android:text="TextView"
                        android:textAlignment="center"
                        android:textSize = "12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <ImageView
                        android:id="@+id/img_fragment_today_artist3"
                        android:layout_gravity="center"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:textSize = "12dp"
                        tools:src="@tools:sample/avatars[0]"/>
                <TextView
                        android:id="@+id/txt_fragment_today_artist3"
                        android:text="TextView"
                        android:textSize = "8.7sp"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <ImageView
                        android:id="@+id/img_fragment_today_artist4"
                        android:layout_gravity="center"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:textSize = "8.7sp"
                        tools:src="@tools:sample/avatars[0]"/>
                <TextView
                        android:id="@+id/txt_fragment_today_artist4"
                        android:text="TextView"
                        android:textSize = "12dp"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
                android:id="@+id/txt_fragment_today_detail_artist"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:text="TextView"
                android:textColor="@color/colorMainBlack"
                android:textSize="13.3sp"
                android:textStyle="bold"
                android:gravity="center"/>
        <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_fragment_home_today_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
        />
    </LinearLayout>
</FrameLayout>